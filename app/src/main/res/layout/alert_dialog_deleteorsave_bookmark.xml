<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvAlertDialog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Do you want to delete from bookmark?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAlertDialogYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text=" Yes "
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvAlertDialog1"
        app:layout_constraintStart_toStartOf="@id/tvAlertDialog1"
        app:layout_constraintEnd_toStartOf="@id/tvAlertDialogNo"
        />

    <TextView
        android:id="@+id/tvAlertDialogNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text=" No "
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvAlertDialog1"
        app:layout_constraintEnd_toEndOf="@id/tvAlertDialog1"
        app:layout_constraintStart_toEndOf="@id/tvAlertDialogYes"/>


</androidx.constraintlayout.widget.ConstraintLayout>